<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.ubiobio.serviciodesaludbio_bio.CentrosDeSalud">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".01">

        <ImageView
            android:layout_width="31dp"
            android:layout_height="27dp"
            android:background="@drawable/flecha"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese RUN y Folio para consultar el estado mÃ©dico del paciente."
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:textColor="#0167B1"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".89">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RUT"
                android:textColor="#FF2E39"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/rut_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="12.345.678-9"
                android:layout_marginLeft="30dp"
                android:textSize="25dp"
                android:textColor="#0167B1"
                android:textColorHint="#0167B1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folio"
                android:textColor="#FF2E39"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/folio_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="123456789"
                android:inputType="number"
                android:layout_marginLeft="30dp"
                android:textSize="25dp"
                android:textColor="#0167B1"
                android:textColorHint="#0167B1"/>
        </LinearLayout>

        <Button
            android:id="@+id/brut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="CONSULTAR"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/footer_min"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight=".1"/>

</LinearLayout>